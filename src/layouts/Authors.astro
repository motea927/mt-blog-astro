---
import { Image } from "@astrojs/image/components";
import { markdownify } from "@lib/utils/textConverter";
import { BsArrowRightCircle } from "react-icons/bs/index.js";
const { authors } = Astro.props;
---

<div class="justify-center row">
  {
    authors.map((author: any) => (
      <div class="mb-8 col-12 sm:col-6 md:col-4">
        {author.data.image && (
          <div class="mb-4">
            <Image
              src={author.data.image}
              alt={author.data.title}
              height={150}
              width={150}
              format={'webp'}
              class="mx-auto rounded-lg"
            />
          </div>
        )}
        <h3 class="mt-8 mb-3 h4">
          <a href={`/authors/${author.slug}`} class="block transition duration-200 hover:text-primary">
            {author.data.title}
          </a>
        </h3>
        <p class="mb-3" set:text={markdownify(author.body.slice(0, 100))} />
        <a href={`/authors/${author.slug}`} class="inline-flex items-center transition duration-200 text-primary hover:opacity-70">
          Read More <BsArrowRightCircle className="inline ml-2" />
        </a>
      </div>
    ))
  }
</div>
